# Server
PORT=8080
MONGO_URL=mongodb://127.0.0.1:27017/portfolio

# Public site URL (used in customer email links)
PUBLIC_SITE_URL=http://localhost:5173

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173

# Admin
ADMIN_EMAIL=maheshrana9520@gmail.com
# Optional: lock admin signup with a secret header/body value
# ADMIN_SIGNUP_SECRET=your_secret

# Razorpay (use LIVE keys in production)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxxxxx

# Calls (amounts in the smallest currency unit, e.g. paise)
CALL_CURRENCY=INR
CALL_PRICE_30=59900
CALL_PRICE_60=99900
CALL_HOLD_MINUTES=10
CALL_REQUIRE_PAYMENT=true

# Call slots window (8 PM → 9 AM by default)
CALL_SLOT_STEP_MINUTES=30
CALL_AUTO_DAYS=14
CALL_BUFFER_MINUTES=15
# Minimum notice before a call can be booked (in minutes). Default: 420 (7 hours).
CALL_MIN_NOTICE_MINUTES=420
# Set to `true` to allow booking slots on the same local calendar day. Default: false.
CALL_ALLOW_SAME_DAY=false
CALL_WINDOW_START_HOUR=20
CALL_WINDOW_END_HOUR=9

# Email notifications (admin + customer)
# Use `log` in dev (prints to server console), `smtp` in production
EMAIL_PROVIDER=log
EMAIL_TO=maheshrana9520@gmail.com
# Set to `false` to disable customer auto-replies/notifications (admin emails still send).
# EMAIL_SEND_CUSTOMERS=true
# Optional
# EMAIL_FROM=Mahesh Portfolio <maheshrana9520@gmail.com>
# EMAIL_SUBJECT_PREFIX=Portfolio

# Email via Resend (HTTPS API) — good for hosts that block outbound SMTP ports
# EMAIL_PROVIDER=resend
# RESEND_API_KEY=your_resend_api_key
# EMAIL_FROM=Your Name <noreply@your-domain.com>

# SMTP (Gmail example)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=maheshrana9520@gmail.com
# SMTP_PASS=YOUR_GMAIL_APP_PASSWORD
